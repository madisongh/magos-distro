# LAYER_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
LCONF_VERSION = "6"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  ##OEROOT##/poky/meta \
  ##OEROOT##/meta-linaro-toolchain \
  ##OEROOT##/meta-multimedia \
  ##OEROOT##/meta-freescale \
  ##OEROOT##/meta-tegra \
  ##OEROOT##/meta-magos \
  "

BBLAYERS_NON_REMOVABLE ?= " \
  ##OEROOT##/poky/meta \
  ##OEROOT##/meta-magos \
  "

